# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your_signing_secret_here
SLACK_APP_TOKEN=xapp-your-app-token-here

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration (if needed for persistence)
# DATABASE_URL=postgresql://user:password@localhost:5432/agent_db

# Git Configuration
GIT_DEFAULT_BRANCH=main
GIT_USER_NAME="Agent Bot"
GIT_USER_EMAIL="agent@yourdomain.com"

# Workspace Configuration
WORKSPACES_DIR=./workspaces
TEMPLATES_DIR=./templates
MAX_CONCURRENT_PROJECTS=10

# Security
JWT_SECRET=your_jwt_secret_here
ALLOWED_USERS=user1@domain.com,user2@domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Agent Behavior
MAX_LOOP_ITERATIONS=50
CONTEXT_WINDOW_SIZE=8000
AUTO_COMMIT_CHANGES=false
REQUIRE_APPROVAL_FOR_DESTRUCTIVE_ACTIONS=true
